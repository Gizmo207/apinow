rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - authenticated users can create their own document
    match /users/{userId} {
      // Allow users to create their own document on signup
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to read/update their own document
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow function service account to write (for welcome email trigger)
      allow write: if request.auth != null;
    }
    
    // Database connections - only authenticated users who own them
    match /database_connections/{connectionId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
    }
    
    // API endpoints - only authenticated users who own them  
    match /api_endpoints/{endpointId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null;
    }
    
    // User subscriptions
    match /user_subscriptions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
